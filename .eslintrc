{
  "extends": [
    "react-app",
    "react-app/jest",
    "airbnb"
  ],
  "rules": {
    "no-underscore-dangle": "off",
    // "off" for Redux Dev tool
    "import/prefer-default-export": "off",
    // "off" for named export
    "no-bitwise": "off",
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          // "ignore" for ServiceWorker that generated by create-react-app
          "registration"
        ]
      }
    ]
  }
}
